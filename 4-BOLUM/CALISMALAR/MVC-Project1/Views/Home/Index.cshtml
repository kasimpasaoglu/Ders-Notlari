@model VM.Login

@{
    ViewData["Title"] = "Home Page";
}

<div class="flex flex-col items-center justify-center min-h-[calc(100vh-100px)] gap-4 mx-auto my-auto text-center">
    <h1>Welcome</h1>
    @if (Model.IsLoggedIn)
    {
        <p>Logged In : @Model.UserName</p>
        @if (Model.IsAdmin)
        {
            <p>ADMIN Acoount</p>
        }
        <form action="/Auth/Logout" method="post">
            <input type="submit" value="Logout"
                class="px-8 py-2 font-extrabold duration-300 cursor-pointer bg-darkNavy rounded-2xl text-aqua hover:bg-coral hover:text-darkNavy">
        </form>
    }
    else
    {
        <p>Please <a class="underline" href="/Auth/Login">Login</a> or <a class="underline" href="/Auth/SignIn">Sign-In</a>
            To Use Programme</p>
    }
</div>
